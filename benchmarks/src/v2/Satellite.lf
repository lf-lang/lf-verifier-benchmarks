@property(name="test", tactic="bmc", spec="G[0, 1 msec](false)")
main reactor {
  controller = new Controller()
  userInput = new UserInput()
  gyro1 = new Gyroscope()
  gyro2 = new Gyroscope(id=1)
  motor = new Motor()
  sensorFusion = new SensorFusion()
  
  gyro1.out_x, gyro1.out_y, gyro1.out_z, gyro2.out_x, gyro2.out_y, gyro2.out_z -> sensorFusion.gyro1_x, sensorFusion.gyro1_y, sensorFusion.gyro1_z, sensorFusion.gyro2_x, sensorFusion.gyro2_y, sensorFusion.gyro2_z
  sensorFusion.angle_x, sensorFusion.angle_y, sensorFusion.angle_z -> controller.current_angle_x, controller.current_angle_y, controller.current_angle_z  
  sensorFusion.angular_velocity_x, sensorFusion.angular_velocity_y, sensorFusion.angular_velocity_z -> controller.angular_velocity_x, controller.angular_velocity_y, controller.angular_velocity_z
  userInput.desired_angle_x, userInput.desired_angle_y, userInput.desired_angle_z -> controller.desired_angle_x, controller.desired_angle_y, controller.desired_angle_z
  controller.control_signal_x, controller.control_signal_y, controller.control_signal_z -> motor.in_x, motor.in_y, motor.in_z
}
