/**
 * A PID controller controling the attitude of a satellite
 * 
 * @author Tassilo Tanneberger
 * @author Erling Jellum
 * @author Shaokai Lin
 */
target C {
  build-type: Debug,
  platform: FlexPRET,
  workers: 2,
  timeout: 1100001 usec,
}

preamble {=
  // Fixed point confuguration
  // #define FIXED_POINT_FRACTION_BITS 12
  // #define FIXED_POINT_SCALE (1 << 12)
=}

reactor Controller(Kp_float: float = 0.3, Ki_float: float = 0.1, Kd_float: float = 0.0) {
  input current_angle_x : int
  input current_angle_y : int
  input current_angle_z : int

  input angular_velocity_x : int
  input angular_velocity_y : int
  input angular_velocity_z : int

  input desired_angle_x : int
  input desired_angle_y : int
  input desired_angle_z : int

  output control_signal_x : int
  output control_signal_y : int
  output control_signal_z : int

  state _state_last_error_x : int
  state _state_last_error_y : int
  state _state_last_error_z : int
  state _state_error_accumulated_x : int
  state _state_error_accumulated_y : int
  state _state_error_accumulated_z : int
  state _state_desired_angle_x : int
  state _state_desired_angle_y : int
  state _state_desired_angle_z : int
  state _state_Kp : int
  state _state_Ki : int
  state _state_Kd : int

  state num_iter: int = 0

  reaction(startup) {=
    self->_state_Kp = self->Kp_float * (1 << 12); // A real bug: I once forgot "* (1 << 12)" and Motor received 0s only.
    self->_state_Ki = self->Ki_float * (1 << 12);
    self->_state_Kd = self->Kd_float * (1 << 12);
    // #ifndef NDEBUG
    // lf_print("Controller gains: Kp=%i Ki=%i Kd=%i", self->_state_Kp, self->_state_Ki, self->_state_Kd);
    // #endif
  =}

  reaction(desired_angle_x, desired_angle_y, desired_angle_z) {=
    self->_state_desired_angle_x = desired_angle_x->value;
    self->_state_desired_angle_y = desired_angle_y->value;
    self->_state_desired_angle_z = desired_angle_z->value;
    // #ifndef NDEBUG
    // lf_print("Desired angle set to %i %i %i", self->_state_desired_angle_x, self->_state_desired_angle_y, self->_state_desired_angle_z);
    // #endif
  =}

  reaction(current_angle_x, current_angle_y, current_angle_z, angular_velocity_x, angular_velocity_y, angular_velocity_z) -> control_signal_x, control_signal_y, control_signal_z {=
    // #ifndef NDEBUG
    //   lf_print("Got current_angle=%i %i %i", current_angle_x->value, current_angle_y->value, current_angle_z->value);
    // #endif
    
    (void)angular_velocity_x;
    (void)angular_velocity_y;
    (void)angular_velocity_z;
    int error_x;
    int error_y;
    int error_z;

    error_x = (current_angle_x->value - self->_state_desired_angle_x);
    error_y = (current_angle_y->value - self->_state_desired_angle_y);
    error_z = (current_angle_z->value - self->_state_desired_angle_z);

    self->_state_error_accumulated_x += error_x;
    self->_state_error_accumulated_y += error_y;
    self->_state_error_accumulated_z += error_z;

    control_signal_x->value = ((self->_state_Kp * error_x) >> 12) +
                  ((self->_state_Kp * self->_state_error_accumulated_x) >>
                    12)  // integral component
                  + ((self->_state_Kd * (self->_state_last_error_x - error_x)) >>
                      12);  // differential component
    control_signal_y->value = ((self->_state_Kp * error_y) >> 12) +
                  ((self->_state_Ki * self->_state_error_accumulated_y) >>
                    12)  // integral component
                  + ((self->_state_Kd * (self->_state_last_error_y - error_y)) >>
                      12);  // differential component
    control_signal_z->value = ((self->_state_Kp * error_z) >> 12) +
                  ((self->_state_Ki * self->_state_error_accumulated_z) >>
                    12)  // integral component
                  + ((self->_state_Kd * (self->_state_last_error_z - error_z)) >>
                      12);

    self->_state_last_error_x = error_x;
    self->_state_last_error_y = error_y;
    self->_state_last_error_z = error_z;
    
    lf_set_present(control_signal_x);
    lf_set_present(control_signal_y);
    lf_set_present(control_signal_z);
  =}
}

reactor Motor {
  input in_x: int
  input in_y: int
  input in_z: int

  state num_iter: int = 0

  reaction(in_x, in_y, in_z) {=
    // #ifndef NDEBUG
    // lf_print("Motor received: in_x=%i in_y=%i in_z=%i", in_x->value, in_y->value, in_z->value);
    // #endif
  =}
}

reactor UserInput {
  output desired_angle_x: int
  output desired_angle_y: int
  output desired_angle_z: int

  reaction(startup) -> desired_angle_x, desired_angle_y, desired_angle_z {=
    desired_angle_x->value = 4096;
    desired_angle_y->value = 2048;
    desired_angle_z->value = 819;
    lf_set_present(desired_angle_x);
    lf_set_present(desired_angle_y);
    lf_set_present(desired_angle_z);
  =}
}

reactor SensorFusion {
  input gyro1_x: int
  input gyro1_y: int
  input gyro1_z: int

  input gyro2_x: int
  input gyro2_y: int
  input gyro2_z: int

  output angle_x: int
  output angle_y: int
  output angle_z: int

  output angular_velocity_x: int
  output angular_velocity_y: int
  output angular_velocity_z: int

  state _state_last_angle_x: int
  state _state_last_angle_y: int
  state _state_last_angle_z: int
  state _state_delta_t: uint32_t

  state last_gyro_x: int
  state last_gyro_y: int
  state last_gyro_z: int
  
  state delta_t: int

  state num_iter: int = 0

  reaction(startup) {=
    self->_state_delta_t = (unsigned int )(0.001 * (1 << 12));
    // #ifndef NDEBUG
    // lf_print("SensorFusion delta_t=%i", self->_state_delta_t);
    // #endif
  =}

  reaction(gyro1_x, gyro1_y, gyro1_z, gyro2_x, gyro2_y, gyro2_z) -> angle_x, angle_y, angle_z, angular_velocity_x, angular_velocity_y, angular_velocity_z {=
    // #ifndef NDEBUG
    // lf_print("Got gyro1=[%i %i %i] gyro2=[%i %i %i]", gyro1_x->value, gyro1_y->value, gyro1_z->value, gyro2_x->value, gyro2_y->value, gyro2_z->value);
    // #endif
    
    int gyro_avg_x = (gyro1_x->value + gyro2_x->value) >> 1;
    int gyro_avg_y = (gyro1_y->value + gyro2_y->value) >> 1;
    int gyro_avg_z = (gyro1_z->value + gyro2_z->value) >> 1;

    angle_x->value = self->_state_last_angle_x +
              ((gyro_avg_x * self->_state_delta_t) >> 12);
    angle_y->value = self->_state_last_angle_y +
              ((gyro_avg_y * self->_state_delta_t) >> 12);
    angle_z->value = self->_state_last_angle_z +
              ((gyro_avg_z * self->_state_delta_t) >> 12);

    angular_velocity_x->value = gyro_avg_x;
    angular_velocity_y->value = gyro_avg_y;
    angular_velocity_z->value = gyro_avg_z;

    self->_state_last_angle_x = angle_x->value;
    self->_state_last_angle_y = angle_y->value;
    self->_state_last_angle_z = angle_z->value;
    
    lf_set_present(angle_x);
    lf_set_present(angle_y);
    lf_set_present(angle_z);
    lf_set_present(angular_velocity_x);
    lf_set_present(angular_velocity_y);
    lf_set_present(angular_velocity_z);
  =}
}

